@inherits LayoutComponentBase
@inject NavigationManager _navManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="header">
            <div class="search-bar">
                <form>
                    <input @bind="searchTerm" type="text" name="search" placeholder="Search for product">
                    <button @onclick="Search"><span class="oi bi-search" aria-hidden="true"></span></button>
                </form>
            </div>
            <div class="header-content">
                <NavLink class="nav-link" href="favourites" Match="NavLinkMatch.All">
                    <span class="oi bi-heart" aria-hidden="true"></span>Favourite
                </NavLink>
                <NavLink class="nav-link" href="about-us" Match="NavLinkMatch.All">
                    <span class="oi bi-cursor-fill" aria-hidden="true"></span> About
                </NavLink>
            </div>
        </div>
            
        <article class="content px-4">
            @Body
        </article>
    </main> 
</div>

@code{
    private string? searchTerm;

    private void Search()
    {
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            _navManager.NavigateTo($"/categories/products/all/{searchTerm}");
        }
    }
}
